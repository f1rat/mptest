<?xml version='1.0' encoding='utf-8'?>
<widget id="net.makinepark.makinepark" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Makine Park</name>
    <description>
        Sıfır ve ikinci el iş makinelerinin tek adresi
    </description>
    <author email="info@hfa.com.tr" href="http://hfa.com.tr">
        HFA Bilişim Ltd.
    </author>
    <content src="index.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <preference name="DisallowOverscroll" value="true" />
</widget>
